{
  "commands": {
    "check": {
      "lint": true,
      "showerrors": true
    },
    "print": {
      "lint": false
    },
    "write": {
      "lint": true
    }
  },
  "global": {
    "showerrors": false
  },
  "rules": {
    "indentenvironments": {
      "enabled": true,
      "tabs": 1,
      "indentlevel": 0,
      "excluded": ["document"]
    },
    "spaceaftercomments": {
      "enabled": true
    },
    "blanklinesbeforesection": {
      "enabled": true,
      "lines": 1
    },
    "newlineaftersentence": {
      "enabled": true
    }
  }
}
