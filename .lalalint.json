{
  "global": {
    "verbose": false,
    "inputdirectory": "./data/",
    "outputdirectory": "./data/output/",
    "trimwhitespace": false
  },
  "rules": {
    "indentenvironments": {
      "enabled": true,
      "tabs": 1,
      "indentlevel": 0,
      "excluded": ["document"]
    },
    "spaceaftercomments": {
      "enabled": true
    },
    "blanklinesbeforesection": {
      "enabled": true,
      "lines": 1
    },
    "newlineaftersentence": {
      "enabled": true
    }
  }
}
